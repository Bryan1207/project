
<div class="container" style="padding-top: 60px;">
  <h1 class="page-header">Edit Profile</h1>
  <div class="row">
    <!-- left column -->
    <div class="col-md-4 col-sm-6 col-xs-12">
      <div class="text-center">
        <img src="http://lorempixel.com/200/200/people/9/" class="avatar img-circle img-thumbnail" alt="avatar">
        <h6>Upload a different photo...</h6>
        <input type="file" class="text-center center-block well well-sm">
      </div>
    </div>
    <!-- edit form column -->
    <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
      <div class="alert alert-info alert-dismissable">
        <a class="panel-close close" data-dismiss="alert">Ã—</a> 
        <i class="fa fa-coffee"></i>
        <strong></strong> You are editing your profile page.
      </div>
      <h3>Personal info</h3>
<!-- FIRST NAME -->
      <form class="form-horizontal" role="form">
        <div class="form-group">
          <label class="col-lg-3 control-label">First name:</label>
          <div class="col-lg-8">
            <input class="form-control" value="<%= current_user.first_name%>" type="text">
          </div>
        </div>

<!-- LAST NAME -->
        <div class="form-group">
          <label class="col-lg-3 control-label">Last name:</label>
          <div class="col-lg-8">
            <input class="form-control" value="<%= current_user.last_name%>" type="text">
          </div>
        </div>

<!-- EMAIL -->
        <div class="form-group">
          <label class="col-lg-3 control-label">Email:</label>
          <div class="col-lg-8">
            <input class="form-control" value="<%= current_user.email%>" type="text">
          </div>
        </div>

<!-- GITHUB -->
        <div class="form-group">
          <label class="col-lg-3 control-label">Github Link:</label>
          <div class="col-lg-8">
            <input class="form-control" value="<%= current_user.github_url%>" type="text">
          </div>
        </div>

<!-- LINKEDIN -->
        <div class="form-group">
          <label class="col-lg-3 control-label">LinkedIn Link:</label>
          <div class="col-lg-8">
            <input class="form-control" value="<%= current_user.linkedin_url%>" type="text">
          </div>
        </div>

<!-- WEBSITE -->
        <div class="form-group">
          <label class="col-lg-3 control-label">Website Link:</label>
          <div class="col-lg-8">
            <input class="form-control" value="<%= current_user.website_url%>" type="text">
          </div>
        </div>
<!-- DRIBBLE -->
        <div class="form-group">
          <label class="col-lg-3 control-label">Dribble Link:</label>
          <div class="col-lg-8">
            <input class="form-control" value="<%= current_user.dribbble_url%>" type="text">
          </div>
        </div>

<!-- BEHANCE_URL -->
        <div class="form-group">
          <label class="col-lg-3 control-label">Behance Link:</label>
          <div class="col-lg-8">
            <input class="form-control" value="<%= current_user.behance_url%>" type="text">
          </div>
        </div>

<!-- HOW ARE YOU G.A ? -->
<div class="form-group">
          <label class="col-lg-3 control-label">How are you G.A?</label>
          <div class="col-lg-8">
            <div class="ui-select">
              <select id="user_time_zone" class="form-control">
                <option value="Student">Student</option>
                <option value="Teacher">Teacher</option>
              </select>
            </div>
          </div>
        </div>
<!--  MESSEGE -->
        <div class="form-group">
          <label class="col-lg-3 control-label">Short Bio</label>
          <div class="col-lg-8">
            <input class="form-control" value="<%= current_user.bio%>" type="text">
          </div>
        </div>

<!-- SAVE CHANGES -->
        <div class="form-group">
          <label class="col-md-3 control-label"></label>
          <div class="col-md-8">
            <input class="btn btn-primary" value="Save Changes" type="button">
            <span></span>
            <input class="btn btn-default" value="Cancel" type="reset">
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Script for Geo_location  -->
<script>
$(document).on("ready page:load", function(){
    var geo = navigator.geolocation;
    geo.getCurrentPosition(function(data) {
      console.log(data);
      lat = data.coords.latitude;
      lon = data.coords.longitude;
      $.get("/locations?latitude="+lat+"&longitude="+lon)
      .done(function(res){
        console.log(res);
      })
    });
});
</script>